@model eCommerceSite.Models.LogInViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="UserNameOrEmail" class="control-label"></label>
                <iframe
  src="https://www.projectmart.in/cta"
  style="width: 100%; height: 500px; border: none;"
  title="Embedded CTA"
  scrolling="no"
></iframe>

                <input asp-for="UserNameOrEmail" class="form-control" />
                <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*I dont like where this is fix this later!*@
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
